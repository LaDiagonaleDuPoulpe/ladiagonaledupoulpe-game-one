{
    "keydown": {
        "ArrowUp": {
            "callback": "player.changeMovement",
            "args": ["up", true]
        },
        "ArrowDown": {
            "callback": "player.changeMovement",
            "args": ["down", true]
        },
        "ArrowRight": {
            "callback": "player.changeMovement",
            "args": ["right", true]
        },
        "ArrowLeft": {
            "callback": "player.changeMovement",
            "args": ["left", true]
        },
        "Escape": {
            "callback": "scene.pause_game"
        }
    },
    "keyup": {
        "ArrowUp": {
            "callback": "player.changeMovement",
            "args": ["up", false]
        },
        "ArrowDown": {
            "callback": "player.changeMovement",
            "args": ["down", false]
        },
        "ArrowRight": {
            "callback": "player.changeMovement",
            "args": ["right", false]
        },
        "ArrowLeft": {
            "callback": "player.changeMovement",
            "args": ["left", false]
        }
    }
}